<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:visibility="gone"
            android:id="@+id/banner"
            app:is_auto_play="false"
            app:indicator_margin="@dimen/px10"
            app:indicator_width="@dimen/px10"
            app:indicator_height="@dimen/px10"
            app:indicator_drawable_selected="@drawable/selected_radius"
            app:indicator_drawable_unselected="@drawable/unselected_radius"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_img"
            android:visibility="visible"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_text"
            android:visibility="gone"
            app:rv_cornerRadius="@dimen/px60"
            app:rv_backgroundColor="@color/blue_15163d"
            android:padding="@dimen/px10"
            android:textColor="@color/white"
            android:ems="4"
            android:layout_margin="@dimen/px50"
            android:gravity="center"
            android:text="3跳过"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content" />

    </FrameLayout>

</layout>