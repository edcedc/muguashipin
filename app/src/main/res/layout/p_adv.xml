<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:layout_height="match_parent">


    <com.flyco.roundview.RoundLinearLayout
        app:rv_backgroundColor="@color/white"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:textSize="16sp"
            android:layout_margin="@dimen/px5"
            android:textColor="@color/white"
            android:text="版本更新公告"
            android:background="#41427E"
            android:padding="@dimen/px20"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:text="xxxxxxxxxx"
            android:layout_gravity="center"
            android:layout_margin="@dimen/px40"
            android:textColor="#F72A61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px40"
            android:layout_marginRight="@dimen/px40"
            android:text="xxxxxxxxxx"
            android:layout_marginBottom="@dimen/px40"
            android:textColor="#41427E" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:visibility="gone"
            android:text="xxxxxxxxxx"
            android:layout_gravity="center"
            android:layout_margin="@dimen/px40"
            android:textColor="#F72A61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/bt_submit"
            android:text="我知道了"
            app:rv_backgroundColor="#F72A61"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/px20"
            android:layout_marginLeft="@dimen/px40"
            android:layout_marginRight="@dimen/px40"
            android:layout_marginBottom="@dimen/px40"
            app:rv_cornerRadius="@dimen/px60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.flyco.roundview.RoundLinearLayout>

</android.support.constraint.ConstraintLayout>