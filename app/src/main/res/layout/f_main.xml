<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/actionbar_shadow_up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110"
            android:background="@color/blue_474578"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ly_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/px20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px10"
                    android:text="@string/home"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size20" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/px2"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/px30"
                android:layout_marginBottom="@dimen/px30"
                android:background="@color/blue_15163d" />

            <LinearLayout
                android:id="@+id/ly_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/px20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/discover" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px10"
                    android:text="@string/find"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size20" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/px2"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/px30"
                android:layout_marginBottom="@dimen/px30"
                android:background="@color/blue_15163d" />

            <LinearLayout
                android:id="@+id/ly_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/px20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bangdan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px10"
                    android:text="@string/list"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size20" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/px2"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/px30"
                android:layout_marginBottom="@dimen/px30"
                android:background="@color/blue_15163d" />

            <LinearLayout
                android:id="@+id/ly_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/px20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/me" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px10"
                    android:text="@string/me"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size20" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>